
! urxvt settings --------------------------------------------------------

URxvt.geometry: 400x30 
URxvt.buffered: true
URxvt.background: black
URxvt.foreground: white
URxvt.cursorColor: yellow
URxvt.underlineColor: green
!URxvt.font:xft:Bitstream Vera Sans Mono:pixelsize=12:antialias=false
!URxvt.font:xft:Terminus:pixelsize=14:antialias=true
!URxvt.font:xft:Droid Sans Mono:pixelsize=12:antialias=true:hinting=true
URxvt.font:xft:Cousine Regen for Powerline:pixelsize=15:antialias=true:hinting=true
!URxvt.perl-ext-common:  default,tabbed
URxvt.perl-ext-common:  default
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.urlLauncher: /usr/bin/uzbl

!------------------
!False tranparency
!------------------
URxvt.transparent: true
URxvt.shading: 80 

Urxvt.secondaryScroll:  true    # Enable Shift-PageUp/Down in screen

!------------------
!Font config (https://wiki.archlinux.org/index.php/Font_Configuration)
!------------------
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
