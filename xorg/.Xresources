
! urxvt settings --------------------------------------------------------

URxvt.geometry: 400x30 
URxvt.buffered: true
URxvt.background: black
URxvt.foreground: white
URxvt.cursorColor: yellow
URxvt.underlineColor: green
!URxvt.font:xft:Bitstream Vera Sans Mono:pixelsize=12:antialias=false
!URxvt.font:xft:Terminus:pixelsize=14:antialias=true
!URxvt.font:xft:Droid Sans Mono:pixelsize=12:antialias=true:hinting=true
URxvt.font:xft:Cousine Regen for Powerline:pixelsize=14:antialias=true:hinting=true
URxvt.perl-ext-common:  default,tabbed
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.urlLauncher: /usr/bin/uzbl

!------------------
!False tranparency
!------------------
URxvt.transparent: true
URxvt.shading: 80 

Urxvt.secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
